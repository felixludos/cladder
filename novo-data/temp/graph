// Causal Model
digraph {
	EconomicEnvironment [label=EconomicEnvironment color=lightblue shape=diamond style=filled]
	LegalDecision [label=LegalDecision color=lightpink shape=ellipse style=filled]
	CovidDeltaConcern [label=CovidDeltaConcern color=lightpink shape=ellipse style=filled]
	MediaCoverage [label=MediaCoverage color=lightblue shape=diamond style=filled]
	FacebookStockResponse [label=FacebookStockResponse color=lightyellow shape=box style=filled]
	PublicPerception [label=PublicPerception color=lightyellow shape=box style=filled]
	StockMarketTrend [label=StockMarketTrend color=lightgreen shape=ellipse style=filled]
	InvestorConfidence [label=InvestorConfidence color=lightgray shape=box style=filled]
	EconomicEnvironment -> LegalDecision
	EconomicEnvironment -> CovidDeltaConcern
	LegalDecision -> FacebookStockResponse
	MediaCoverage -> FacebookStockResponse
	CovidDeltaConcern -> PublicPerception
	MediaCoverage -> PublicPerception
	FacebookStockResponse -> StockMarketTrend
	PublicPerception -> StockMarketTrend
	StockMarketTrend -> InvestorConfidence
	PublicPerception -> InvestorConfidence
}
